@model IEnumerable<Sistema_Gestion_MEP.Controllers.AccessListViewModel>
@{
    ViewBag.Title = "Accesos asignados";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: white;
        box-shadow: 0 4px 15px rgba(42, 82, 152, 0.2);
    }

        .page-header h3 {
            font-size: 1.8rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-header .stats-badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1.2rem;
            border-radius: 20px;
            font-size: 0.95rem;
            margin-top: 0.5rem;
            display: inline-block;
        }

    .breadcrumb-custom {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 1.5rem;
    }

        .breadcrumb-custom .breadcrumb {
            margin: 0;
            background: transparent;
            padding: 0;
        }

        .breadcrumb-custom .breadcrumb-item a {
            color: #2a5298;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .breadcrumb-custom .breadcrumb-item a:hover {
                color: #1e3c72;
                transform: translateX(2px);
            }

        .breadcrumb-custom .breadcrumb-item.active {
            color: #6c757d;
        }

    .filter-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

        .filter-card .filter-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .filter-card .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .filter-card .form-select {
            border: 2px solid #e0e6ed;
            border-radius: 8px;
            padding: 0.65rem 1rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

            .filter-card .form-select:focus {
                border-color: #2a5298;
                background-color: white;
                box-shadow: 0 0 0 3px rgba(42, 82, 152, 0.1);
            }

    .btn-filter {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border: none;
        padding: 0.65rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(42, 82, 152, 0.3);
    }

        .btn-filter:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(42, 82, 152, 0.4);
            color: white;
        }

    .btn-clear {
        background: white;
        color: #6c757d;
        border: 2px solid #e0e6ed;
        padding: 0.65rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-clear:hover {
            background: #f8f9fa;
            border-color: #2a5298;
            color: #2a5298;
            transform: translateY(-2px);
        }

    .table-container {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .table-custom {
        margin: 0;
    }

        .table-custom thead {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        }

            .table-custom thead th {
                color: white;
                font-weight: 600;
                padding: 1.2rem 1rem;
                border: none;
                font-size: 0.95rem;
                white-space: nowrap;
            }

                .table-custom thead th i {
                    margin-right: 6px;
                    opacity: 0.9;
                }

        .table-custom tbody td {
            padding: 1rem;
            vertical-align: middle;
            color: #2c3e50;
            border-bottom: 1px solid #f0f0f0;
        }

        .table-custom tbody tr {
            transition: all 0.2s ease;
        }

            .table-custom tbody tr:hover {
                background: linear-gradient(135deg, rgba(227, 242, 253, 0.5) 0%, rgba(187, 222, 251, 0.3) 100%);
                transform: scale(1.01);
            }

            .table-custom tbody tr:last-child td {
                border-bottom: none;
            }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

        .empty-state i {
            font-size: 4rem;
            color: #dee2e6;
            margin-bottom: 1.5rem;
            display: block;
        }

        .empty-state h5 {
            color: #6c757d;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #adb5bd;
            margin: 0;
        }

    .badge-date {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        color: #1976d2;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .badge-deadline {
        background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
        color: #e65100;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .badge-expired {
        background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
        color: #c62828;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .badge-no-limit {
        background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
        color: #6a1b9a;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .professor-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .specialty-badge {
        background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
        color: #2e7d32;
        padding: 0.3rem 0.8rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
        display: inline-block;
    }

    @@media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
        }

            .page-header h3 {
                font-size: 1.4rem;
            }

        .filter-card {
            padding: 1.5rem;
        }

        .table-container {
            overflow-x: auto;
        }

        .table-custom {
            font-size: 0.85rem;
        }

            .table-custom thead th,
            .table-custom tbody td {
                padding: 0.75rem 0.5rem;
            }
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    @@media (max-width: 576px) {
        .action-buttons {
            flex-direction: column;
        }

            .action-buttons .btn {
                width: 100%;
            }
    }
</style>

<div class="breadcrumb-custom">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">
                    <i class="fa-solid fa-house"></i> Inicio
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fa-solid fa-list-check"></i> Accesos
            </li>
        </ol>
    </nav>
</div>

<div class="page-header">
    <h3>
        <i class="fa-solid fa-list-check"></i>
        Gestion de Accesos
    </h3>
    <span class="stats-badge">
        <i class="fa-solid fa-chart-simple me-1"></i>
        Total de accesos: <strong>@ViewBag.Total</strong>
    </span>
</div>

<div class="filter-card">
    <div class="filter-title">
        <i class="fa-solid fa-filter"></i>
        Filtrar accesos
    </div>

    @using (Html.BeginForm("List", "Access", FormMethod.Get, new { @class = "row g-3" }))
    {
        <div class="col-md-5">
            <label class="form-label">
                <i class="fa-solid fa-layer-group me-1"></i>
                Especialidad
            </label>
            @Html.DropDownList("specialtyId", (SelectList)ViewBag.SpecialtyId, "Todas las especialidades", new { @class = "form-select" })
        </div>
        <div class="col-md-5">
            <label class="form-label">
                <i class="fa-regular fa-calendar-days me-1"></i>
                Periodo
            </label>
            @Html.DropDownList("termId", (SelectList)ViewBag.TermId, "Todos los periodos", new { @class = "form-select" })
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <div class="action-buttons w-100">
                <button type="submit" class="btn btn-filter flex-grow-1">
                    <i class="fa-solid fa-magnifying-glass me-1"></i> Buscar
                </button>
                <a href="@Url.Action("List","Access")" class="btn btn-clear">
                    <i class="fa-solid fa-rotate-right"></i>
                </a>
            </div>
        </div>
    }
</div>

<div class="table-container">
    <table class="table table-custom">
        <thead>
            <tr>
                <th><i class="fa-regular fa-user"></i> Profesor</th>
                <th><i class="fa-solid fa-layer-group"></i> Especialidad</th>
                <th><i class="fa-regular fa-calendar-days"></i> Periodo</th>
                <th><i class="fa-regular fa-clock"></i> Fecha acceso</th>
                <th><i class="fa-regular fa-bell"></i> Fecha limite</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5">
                        <div class="empty-state">
                            <i class="fa-regular fa-folder-open"></i>
                            <h5>No se encontraron accesos</h5>
                            <p>No hay accesos que coincidan con los filtros seleccionados</p>
                        </div>
                    </td>
                </tr>
            }
            else
            {
                var today = DateTime.Today;
                foreach (var a in Model)
                {
                    var isExpired = a.FechaLimite.HasValue && a.FechaLimite.Value < today;
                    <tr>
                        <td>
                            <span class="professor-name">
                                <i class="fa-solid fa-user-tie me-2" style="color: #2a5298;"></i>@a.Profesor
                            </span>
                        </td>
                        <td>
                            <span class="specialty-badge">
                                @a.Especialidad
                            </span>
                        </td>
                        <td>@a.Periodo</td>
                        <td>
                            <span class="badge-date">
                                <i class="fa-regular fa-calendar-check me-1"></i>
                                @a.FechaAcceso.ToString("dd/MM/yyyy")
                            </span>
                            <br />
                            <small style="color: #6c757d;">
                                <i class="fa-regular fa-clock me-1"></i>@a.FechaAcceso.ToString("HH:mm")
                            </small>
                        </td>
                        <td>
                            @if (a.FechaLimite.HasValue)
                            {
                                if (isExpired)
                                {
                                    <span class="badge-expired">
                                        <i class="fa-solid fa-circle-exclamation me-1"></i>
                                        @a.FechaLimite.Value.ToString("dd/MM/yyyy")
                                    </span>
                                    <br />
                                    <small style="color: #c62828;">Expirado</small>
                                }
                                else
                                {
                                    <span class="badge-deadline">
                                        <i class="fa-regular fa-calendar-xmark me-1"></i>
                                        @a.FechaLimite.Value.ToString("dd/MM/yyyy")
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="badge-no-limit">
                                    <i class="fa-solid fa-infinity me-1"></i>
                                    Sin limite
                                </span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="breadcrumb-custom">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">
                    <i class="fa-solid fa-house"></i> Inicio
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fa-regular fa-calendar-days"></i> Periodos
            </li>
        </ol>
    </nav>
</div>

<div class="page-header">
    <div class="page-header-content">
        <h3>
            <i class="fa-regular fa-calendar-days"></i>
            Periodos Lectivos
        </h3>
        <p>Gestion de trimestres, semestres y años academicos</p>
    </div>
    <a href="@Url.Action("Create","Term")" class="btn-create">
        <i class="fa-solid fa-plus"></i>
        Nuevo Periodo
    </a>
</div>

<div class="filter-card">
    <div class="filter-card-title">
        <i class="fa-solid fa-filter"></i>
        Filtros de Busqueda
    </div>
    @using (Html.BeginForm("List", "Term", FormMethod.Get, new { @class = "row g-3" }))
    {
        <div class="col-md-3">
            <label class="form-label-custom">
                <i class="fa-solid fa-calendar"></i>
                Año
            </label>
            @Html.DropDownList("year", (SelectList)ViewBag.Years, "Todos los años", new { @class = "form-select form-select-custom" })
        </div>
        <div class="col-md-6">
            <label class="form-label-custom">
                <i class="fa-solid fa-tag"></i>
                Etiqueta
            </label>
            <input type="text" class="form-control form-control-custom" name="q" value="@q" placeholder="Ej: I Trimestre, Semestre 2..." />
        </div>
        <div class="col-md-3 d-flex align-items-end gap-2 filter-actions">
            <button type="submit" class="btn-filter flex-grow-1">
                <i class="fa-solid fa-magnifying-glass"></i>
                Buscar
            </button>
            <a href="@Url.Action("List","Term")" class="btn-clear">
                <i class="fa-solid fa-rotate-right"></i>
            </a>
        </div>
    }
</div>

<div class="table-container">
    <table class="table table-custom">
        <thead>
            <tr>
                <th><i class="fa-solid fa-calendar"></i> Año</th>
                <th><i class="fa-solid fa-tag"></i> Etiqueta</th>
                <th><i class="fa-solid fa-arrow-down-1-9"></i> Orden</th>
                <th><i class="fa-solid fa-calendar-check"></i> Fecha Inicio</th>
                <th><i class="fa-solid fa-calendar-xmark"></i> Fecha Fin</th>
            </tr>
        </thead>
        <tbody>
            @if (!hasItems)
            {
                <tr>
                    <td colspan="5">
                        <div class="empty-state">
                            <i class="fa-regular fa-calendar-xmark"></i>
                            <h5>No se encontraron periodos</h5>
                            <p>
                                @if (string.IsNullOrEmpty(q) && !year.HasValue)
                                {
                                    <text>No hay periodos registrados. Comience creando uno nuevo.</text>
                                }
                                else
                                {
                                    <text>No hay resultados con los filtros aplicados. Intente con otros criterios.</text>
                                }
                            </p>
                        </div>
                    </td>
                </tr>
            }
            else
            {
                foreach (var t in Model)
                {
                    <tr>
                        <td>
                            <div class="term-year">
                                <i class="fa-solid fa-calendar-day"></i>
                                @t.Year
                            </div>
                        </td>
                        <td>
                            <div class="term-label">@t.Label</div>
                        </td>
                        <td>
                            <span class="order-badge">
                                <i class="fa-solid fa-hashtag"></i>
                                @t.OrderInYear
                            </span>
                        </td>
                        <td>
                            @if (t.StartDate.HasValue)
                            {
                                <div class="date-display">
                                    <i class="fa-solid fa-calendar-check"></i>
                                    @t.StartDate.Value.ToString("dd/MM/yyyy")
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td>
                            @if (t.EndDate.HasValue)
                            {
                                <div class="date-display end">
                                    <i class="fa-solid fa-calendar-xmark"></i>
                                    @t.EndDate.Value.ToString("dd/MM/yyyy")
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="stats-footer">
    <div class="stats-item">
        <i class="fa-solid fa-chart-simple"></i>
        <span>Total de periodos: <strong>@total</strong></span>
    </div>
    @if (!string.IsNullOrEmpty(q) || year.HasValue)
    {
        <div class="stats-item">
            <i class="fa-solid fa-filter"></i>
            <span>Filtros activos:</span>
            @if (year.HasValue)
            {
                <span class="active-filter-badge">
                    <i class="fa-solid fa-calendar"></i>
                    Año: @year
                </span>
            }
            @if (!string.IsNullOrEmpty(q))
            {
                <span class="active-filter-badge">
                    <i class="fa-solid fa-tag"></i>
                    "@q"
                </span>
            }
        </div>
    }
</div>
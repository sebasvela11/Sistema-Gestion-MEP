@model IEnumerable<Sistema_Gestion_MEP.Models.Term>
@{
    ViewBag.Title = "Periodos";
    var q = (string)ViewBag.Query;
    int? year = ViewBag.Year as int?;

    // Calcular total sin LINQ
    int total = 0;
    bool hasItems = false;

    if (ViewBag.Total is int tFromBag && tFromBag >= 0)
    {
        total = tFromBag;
        if (Model != null)
        {
            var e = Model.GetEnumerator();
            hasItems = e.MoveNext();
        }
    }
    else if (Model != null)
    {
        foreach (var _ in Model)
        {
            total++;
            hasItems = true;
        }
    }
}

